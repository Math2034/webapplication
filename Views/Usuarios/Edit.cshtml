@model WebApplication2.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}


<div style="margin-bottom: 5%;">
    <a asp-action="Index" style="margin-bottom: 15px;" class="wrap"><i class="bi bi-arrow-left-circle-fill"> Voltar</i></a>
</div>

<h1>Editar Usuário</h1>
<hr />
<div class="row">
    <div class="col-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="margin-top: 25px">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 25px">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 25px">
                <label asp-for="Data_Nascimento" class="control-label"></label>
                <input asp-for="Data_Nascimento" class="form-control" />
                <span asp-validation-for="Data_Nascimento" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 25px">
                <label asp-for="Rendimento" class="control-label"></label>
                <input placeholder="0,00" asp-format="{0:#,###.00}" asp-for="Rendimento" class="form-control" />
                <span asp-validation-for="Rendimento" class="text-danger"></span>
            </div>
            <div style="margin-top: 10%">
                <input type="submit" value="Salvar" class="wrap" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .wrap {
        background-color: #C5E3F4;
        color: #0D65D9;
        font-family: Arial;
        font-size: 15px;
        font-weight: 400;
        font-style: normal;
        text-decoration: none;
        padding: 10px 25px;
        border: 2px solid #0D65D9;
        border-radius: 100px;
        display: inline-block;
    }

    body {
        background-color: #F2F2F2;
    }
</style>