@model WebApplication2.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1>Deseja deletar este usuário?</h1>
<div style="margin-top: 30px">
    <dl class="row">
        <dd class="col-sm-10" style="font-size: 30px">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Sim" class="btn btn-success" /> 
        <input asp-action="Index" type="submit" value="Não" class="btn btn-danger" />
    </form>
</div>

<style>
    body {
        background-color: #F2F2F2;
    }
</style>